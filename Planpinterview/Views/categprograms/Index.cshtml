@model IEnumerable<Planpinterview.Models.categprogram>

@{
    ViewData["Title"] = "Index";
}

<h1>Programe</h1>

<p>
    <a asp-action="Create">Add program</a>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.monyvalue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id"class="btn btn-danger">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id"class="btn btn-success">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
